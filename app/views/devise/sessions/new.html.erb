<div id="login">
  <h3 class="text-center text-white pt-5">Login form</h3>
  <div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {id: 'login-form'}) do |f| %>

              <div class="form-group">
                <%= f.label :email, class: "text-info" %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "username", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password, class: "text-info" %><br/>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "lg_password" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <%= f.check_box :remember_me, class: "text-info" %>
                  <%= f.label :remember_me, class: "text-info" %>
                </div>
              <% end %>

              <div class="form-group">
                <%= f.submit "Log in", class: "btn btn-info btn-md" %>
              </div>
              <div class="form-group">
                <%= render "devise/shared/links" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
